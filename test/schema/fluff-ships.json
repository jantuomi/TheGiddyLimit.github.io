{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"version": "1.0.0",
	"type": "object",
	"properties": {
		"ship": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"source": {
						"type": "string"
					},
					"images": {
						"type": "array",
						"items": {
							"$ref": "entry.json#/definitions/entryImage"
						}
					},
					"type": {
						"type": "string"
					},
					"entries": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					},
					"_copy": {
						"name": {
							"type": "string"
						},
						"source": {
							"type": "string"
						}
					},
					"_appendCopy": {
						"name": {
							"type": "string"
						},
						"source": {
							"type": "string"
						}
					}
				},
				"required": ["name", "source"],
				"additionalProperties": false
			}
		}
	}
}
